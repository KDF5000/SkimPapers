.container{
  padding: 40rpx;
}

input, textarea{
  border:solid 2rpx #b2b2b2;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 5rpx;
  font-size: 30rpx;
}


button{
  height: 94rpx;
  border-radius: 10rpx;
  background-color: rgb(9, 187, 7);
  color: #FFF;
}

button:active{
  background-color: rgba(9, 187, 7, 0.8);
  color: #fff;
}

