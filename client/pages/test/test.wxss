page {
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.paper-item{
  width: 88%;
  padding-right: 6%;
  padding-left: 6%;
  margin-top: 40rpx;
  font-family: Times, TimesNR, 'New Century Schoolbook',
     Georgia, 'New York', serif;
}

.paper-title{
  display: flex;
  flex-direction: row;
  font-size: 34rpx;
  font-weight: 600;
  word-break:break-all;
  word-wrap: break-word;
}

.paper-abstract{
  display: flex;
  flex-direction: row;
  font-size:28rpx;
  word-break:break-all;
  word-wrap: break-word;
}
.user-info{
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    font-size: 26rpx;
}
/* .user-avatar,.user-name{
