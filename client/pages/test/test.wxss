.user-avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  border: solid beige 1rpx;
}

.user-name{
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 10rpx;
  color: #b6b6b6;
}

.date{
  /* display: flex; */
  /* float: right;  */
  /* width: 40%; */
  margin-right: 10rpx;
  width: 300rpx;
  line-height: 50rpx;
  text-align: right;
  color: #b6b6b6;
  position: absolute;
  right: 40rpx;
}

.cutting-line{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 1rpx;
  background-color: #d0d0d0;
  margin-top: 20rpx;
  clear: true;
}
